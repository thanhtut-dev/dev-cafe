<odoo>
    <record id="mail_template_discount_approval" model="mail.template">
        <field name="name">Sale Discount Approval</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="email_from">${(object.user_id.email_formatted or '')}</field>
        <field name="email_to">${object.user_id.company_id.approver_email}</field>
        <field name="subject">Approval Needed: Sale Order ${object.name}</field>
        <field name="body_html">
            <![CDATA[
                <p>Hello,</p>
                <p>The sale order <b>${object.name}</b> requires your approval.</p>

                <p>
                    <a href="${object._build_approval_url('approve')}"
                       style="padding:10px 15px;background:#28a745;color:white;text-decoration:none;">
                        Approve
                    </a>

                    <a href="${object._build_approval_url('reject')}"
                       style="padding:10px 15px;background:#dc3545;color:white;text-decoration:none;margin-left:10px;">
                        Reject
                    </a>
                </p>

                <p>Thank you.</p>
            ]]>
        </field>
    </record>
</odoo>
